<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="887.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p2.LoginPage.LoginViewCreator">
  <children>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" prefHeight="25.0" prefWidth="365.0" text="Sales Data Management System">
               <font>
                  <Font name="Verdana Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" alignment="CENTER" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter your username" />
            <PasswordField fx:id="passwordField" alignment="CENTER" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter your password" />
            <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#loginAttempt" prefHeight="40.0" prefWidth="100.0" text="Login" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
  </children>
</VBox>
